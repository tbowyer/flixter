<center>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />
    <% @courses.each do |course| %>
      <div class="booyah-box col-xs-10 col-xs-offset-1">
        <h2 class="text-center">
        	<%= link_to course.title, course_path(course) %>
        </h2>
        <br />
        <br class="clr" />
        <%= course.description %>
        <br />
        <br class="clr" />
        <%= image_tag course.picture %>
      </div>
      <br />
    <% end %>
</div>
</center>